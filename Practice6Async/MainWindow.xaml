<Window x:Class="KMA.ProgrammingInCSharp2022.Practice6Async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels1="clr-namespace:KMA.ProgrammingInCSharp2022.Practice6Async.ViewModels"
        xmlns:views1="clr-namespace:KMA.ProgrammingInCSharp2022.Practice6Async.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="300" MinHeight="210" MinWidth="200" Content="{Binding CurrentViewModel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
    <Window.Resources>
        <DataTemplate DataType="{ x:Type viewModels1:MainViewModel}">
            <views1:MainView></views1:MainView>
        </DataTemplate>
        <DataTemplate DataType="{ x:Type viewModels1:AuthViewModel}">
            <views1:AuthView></views1:AuthView>
        </DataTemplate>
    </Window.Resources>
</Window>
